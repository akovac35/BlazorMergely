@page "/"
@namespace BlazorMergelyWebApp.Pages
@using com.github.akovac35.BlazorMergely
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>BlazorMergelyWebApp</title>
    <base href="~/" />
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link href="css/site.css" rel="stylesheet" />
    <link href="BlazorMergelyWebApp.styles.css" rel="stylesheet" />

    @* BlazorMergely CSS references *@
    <component type="typeof(BlazorMergelyCssReferences)" render-mode="Static"/>
</head>
<body>
    <component type="typeof(App)" render-mode="ServerPrerendered" />

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.server.js"></script>

    @* BlazorMergely JS references *@
    <component type="typeof(BlazorMergelyJsReferences)" render-mode="Static"/>
</body>
</html>
